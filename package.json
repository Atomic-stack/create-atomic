{
  "name": "create-atomic",
  "version": "0.0.0",
  "type": "module",
  "license": "MIT",
  "author": "Adrian Cruz",
  "description": "An opinionated TypeScript build toolchain for modern, node projects.",
  "files": [
    "build/*"
  ],
  "main": "build/index.js",
  "engines": {
    "node": ">= 16.0.0"
  },
  "scripts": {
    "start": "ts-node src/index.ts",
    "build": "tsc -p ./tsconfig.json && shx rm -rf build/templates && shx cp -r ./templates build",
    "prepublishOnly": "shx rm -rf build && npm run build",
    "format": "prettier --write src/**",
    "lint": "eslint src/**",
    "lint:fix": "eslint src/** --fix",
    "test": "jasmine --config=jasmine.json"
  },
  "bin": {
    "create-atomic": "build/index.js"
  },
  "lint-staged": {
    "*.ts": "eslint"
  },
  "husky": {
    "hooks": {
      "precommit": "lint-staged && pretty-quick --staged"
    }
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Atomic-stack/create-atomic.git"
  },
  "bugs": {
    "url": "https://github.com/Atomic-stack/create-atomic/issues"
  },
  "homepage": "https://github.com/Atomic-stack/create-atomic#readme",
  "keywords": [
    "atomic",
    "atomic-stack",
    "typescript",
    "ecmascript",
    "es2019",
    "es2020",
    "es2021"
  ],
  "devDependencies": {
    "@types/ejs": "^3.1.2",
    "@types/inquirer": "^9.0.3",
    "@types/node": "^18.14.6",
    "@typescript-eslint/eslint-plugin": "^5.39.0",
    "@typescript-eslint/parser": "^5.54.0",
    "eslint": "^8.25.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-config-standard-with-typescript": "^34.0.0",
    "eslint-plugin-import": "^2.26.0",
    "eslint-plugin-n": "^15.3.0",
    "eslint-plugin-prettier": "^4.2.1",
    "eslint-plugin-promise": "^6.0.1",
    "husky": "^8.0.3",
    "jasmine": "^4.4.0",
    "jasmine-spec-reporter": "^7.0.0",
    "jasmine-ts": "^0.4.0",
    "lint-staged": "^13.0.3",
    "prettier": "^2.7.1",
    "pretty-quick": "^3.1.3",
    "shx": "^0.3.4",
    "ts-node": "^10.9.1",
    "typescript": "^4.9.5"
  },
  "dependencies": {
    "ejs": "^3.1.8",
    "inquirer": "^9.1.4"
  }
}
